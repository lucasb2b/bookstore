<h1>Detalhes do Autor</h1>
<p><strong>Nome:</strong> <%= @author.name %></p>

<h2>Livros deste Autor</h2>
<ul>
  <% @author.books.each do |book| %>
    <li><%= link_to book.author_id, book %></li>
  <% end %>
</ul>

<%= link_to 'Editar', edit_author_path(@author) %> |
<%= button_to 'Delete',
            author_path(@author.id),
            method: :delete,
            data: { confirm: 'Are you sure?'} %> |
<%= link_to 'Voltar', authors_path %>

<hr>
<%= link_to 'Excluir 1', authors_delete_path(@author), method: :delete%>
<%= link_to 'Excluir 2', authors_delete_url(@author), method: :delete%>
