<%= flash.alert %>

<h1>Login</h1>

<%= form_with(model: @user, url: auth_login_path) do |form| %>
  <div class="field">
    <%= form.label :email %>
    <%= form.email_field :email %>
  </div>

  <div class="field">
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div class="actions">
    <%= form.submit 'Login' %>
  </div>
<% end %>